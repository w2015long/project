.containers {
  height: 100vh;
  background-color:#FF5234;
  position: relative;
  padding: 60rpx 30rpx 30rpx;
  box-sizing: border-box; overflow:hidden;
}
.top-bg{width: 100%; position: absolute; left: 0; top:0; right: 0; z-index: 1;}
.top-bg image{width:100%;}

.bot-bg{width: 100vw; height: 80rpx; position: absolute; left: 0; bottom:0; right: 0; z-index: 3;}
.bot-bg image{width:100%;}
.cont .mc{position: absolute; left: 0; right: 0; top:2rpx; bottom:35rpx; display: flex; justify-content: space-between; flex-wrap: wrap; padding: 102rpx 20rpx 0; overflow: hidden; overflow-y: auto;}
.cont .mc .item{box-sizing: border-box; width: 146rpx; height:170rpx; border-radius: 8px; background-color: #FDF8F4; padding-top: 21rpx; position: relative; margin-bottom: 20rpx;}
.cont .mc .item .cell-hd{width: 88rpx; height: 88rpx; margin:0 auto;}
.cont .mc .item .cell-hd image{width: 88rpx; height: 88rpx;}
.cont .mc .item .cell-bd{line-height: 40rpx; text-align: center; font-size: 28rpx; color: #4D4D4D;}
.cont .mc .item .red-envelope{display: none; width: 160rpx; height: 160rpx; position: relative;}
.cont .mc .item .red-envelope:before {content: '+'; color: #fb9c7e; font-size: 48rpx; position: absolute; top: 43rpx; right: -12rpx; }
.cont .mc .item .red-envelope image{width: 160rpx; height: 160rpx;}
.cont .mc .item .red-envelope .already{position: absolute; left: 0; bottom:40rpx; right:0; text-align: center; color: #fef466; font-size: 35rpx;}
.cont .mc .item .red-envelope .already text{display: inline-block; margin-right:-2rpx; font-size: 24rpx;}
.cont .mc .item .act-icon{display: none; position: absolute; right: 0; top:0;}
.cont .mc .item .act-icon image{width: 50rpx; height: 49rpx;}

.cont .mc .item:nth-child(5n) {display: flex; align-items: center; justify-content: center; padding-top: 0; width: 100%; }
.cont .mc .item:nth-child(5n) .cell-hd { margin: 0; margin-right: 25rpx; margin-left: 15rpx; }
.cont .mc .item:nth-child(5n) .red-envelope { display: block; }


.cont .mc .active{background-color: #FFCF33;}
.cont .mc .active .cell-bd{color: #000;}
.cont .mc .active .act-icon{display: block;}

.redd-packet{text-align: center;}
.redd-packet image{width: 645rpx; height: auto;}