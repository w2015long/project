.containers {
  height: 100vh;
  background-color:#FF5234;
  position: relative;
  padding: 60rpx 30rpx 30rpx;
  box-sizing: border-box; overflow:hidden;
}
.top-bg{width: 100%; position: absolute; left: 0; top:0; right: 0; z-index: 1;}
.top-bg image{width:100%;}

.bot-bg{width: 100vw; height: 80rpx; position: absolute; left: 0; bottom:0; right: 0; z-index: 3;}
.bot-bg image{width:100%;}

.cont{width: 100%; height: 100%; padding: 90rpx 0 35rpx;  background-color: #fff; border-radius:20rpx; overflow: hidden; overflow-y: auto;  box-sizing: border-box; position: relative; z-index: 2;}
.cont .mt{height: 90rpx; line-height: 90rpx; color:#333333; padding:0 28rpx 0 20rpx; background-color:#FDF8F4; position: absolute; left: 0; top:0; right:0; font-size: 28rpx; z-index: 2;}
.cont .mt text{float: left;}
.cont .mt .bonus{float: left; color: #FA3B00; font-size: 48rpx; padding: 0 8rpx; font-weight: bold;}
.cont .mt .date-box{float: right;width: 205rpx; height: 54rpx; line-height: 54rpx; margin-top:18rpx; text-align: center; padding-right:26rpx; border: 2rpx solid #FA9A7C; color: #FA3B00; font-size: 24rpx;
border-radius: 30rpx; position: relative; background-color: #fff;}
.cont .mt .date-box::after{
  content:" ";display:inline-block;height:6px;width:6px;border-width:2px 2px 0 0;border-color:#fa9a7c;border-style:solid;
  -webkit-transform:matrix(-0.71, 0.71, -0.71, -0.71, 0, 0);position:relative;top:-2px;
          transform:matrix(-0.71, 0.71, -0.71, -0.71, 0, 0); position:absolute;top:50%;margin-top:-6px;right:26rpx;}

.cont .mt::before{
  border-top: 1px solid #e5e5e5;color: #e5e5e5; width:100%; content: " ";height: 1;left:0; right: 0; position: absolute;
  bottom: 0;-webkit-transform-origin: 0 0;transform-origin: 0 0;-webkit-transform: scaleY  (0.5);transform: scaleY(0.5);z-index: 2;}

.

.receive-mask{position: fixed; left: 0; top:0; right: 0; bottom: 0; z-index: 10; background-color: rgba(0, 0, 0, 0.7);}
.receive-layer{position: absolute; left: 0; right:0; top:50%; transform: translateY(-50%); text-align: center; z-index: 12;}
.receive-layer image{width: 712rpx;}
.receive-layer .re-money { display: block; position: absolute; top: 110rpx; left: 0; right: 30rpx; color: #FE5445; text-align: center; font-weight: bold; font-size: 150rpx; }
.receive-layer .re-money text { font-size: 60rpx; }

.receive-layer .confirm{display: block; width: 300rpx; height: 85rpx; position: absolute; left: 50%; bottom: 310rpx; margin-left: -165rpx; font-size: 0; z-index: 13;}


