.containers {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
} 
.scroll-container {
  height: 88rpx;
  width:85vw;
}
.warp {
  width: 100%;
  height:100vh;
  background-color: #F5F5F5;
}
.top {
	width:100%;
	height:88rpx;
	display:flex;
	flex-direction:row;
	align-items:center;
}
.moreicon {
	width:26rpx;
	height:16rpx;
	margin-bottom:4rpx;
}
.scroll-tab{
  display: flex;
  flex-direction: row;
  height: 88rpx;
  width: 900rpx;
  background-color: #fff;
}

.scroll-tab button{
  width: 150rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #9A9A9A;
  text-align: center;
  line-height: 88rpx;
  background-color: rgba(0,0,0,0);
}
.scroll-tab .on{
  font-family: PingFangSC-Semibold;
  color: #27C886;
}
.on::before{
  border-top: 8rpx solid #27C886;color: #27C886; width:30%; content: " ";height: 0rpx;left:35%; right: 0; position: absolute;
  bottom: -2rpx;-webkit-transform-origin: 0 0;transform-origin: 0 0;-webkit-transform: scaleY  (0.5);transform: scaleY(0.5);z-index: 2;
}
.down-btn{
  height: 88rpx;
  width: 120rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  background-color: #fff;
  box-shadow:0px 0px 10px #E5E5E5;
  display: flex;
  justify-content: center;
  align-items: center;
}

button{
  background-color: rgba(0,0,0,0);
  border-width: 0rpx;
  border-color: rgba(0,0,0,0)
}

button::after{
  border: none;
}

.main-content {
  width: 100%;
  height: 100%;
  background-color: #F5F5F5;
}

.list-view {
  display: flex;
  width:100%;
  flex-direction: column;
  align-items: center;
  overflow:hidden;
}
.list-cell {
  margin-top: 21rpx;
  width: 100%;
  flex: 1;
  background-color: #fff;
}
.model {
  display: flex;
  position: absolute;
  top: 88rpx;
  background-color: rgba(0,0,0,0.2);
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.model {
  display: flex;
  position: absolute;
  top: 88rpx;
  background-color: rgba(0,0,0,0.2);
  width: 100%;
  flex-direction: column;
  height: 100%;
}

.model-container {
  display: flex;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #E5E5E5;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
}

.model-container view {
  margin-right: 20rpx;
  height: 60rpx;
  border: 1rpx solid #E5E5E5;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left:26rpx;
  padding-right:26rpx;
  margin-bottom:18rpx;
}

.model-container .selected {
  margin-right: 20rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  background-color: #27C886;
  justify-content: center;
  align-items: center;
  margin-bottom:18rpx;
}

.model-container text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #1A1A1A;
}

.selected text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #fff;
}
.bottom-tap {
  display: flex;
  flex: 1;
  width: 100%;
  background-color: rgba(0,0,0,0);
}