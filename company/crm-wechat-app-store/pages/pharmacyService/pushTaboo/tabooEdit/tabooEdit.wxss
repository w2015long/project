page{background-color: #f5f5f5;}
.edit-container .gd-box{padding: 26rpx 32rpx; display: flex; align-items:center; background-color: #fff; margin-top: 20rpx;}
.edit-container .box-hd{width: 120rpx; height: 120rpx; margin-right: 22rpx; border-radius: 4rpx; overflow: hidden;}
.edit-container .box-hd image{width: 120rpx; height: 120rpx;}
.edit-container .box-bd{flex: 1;}
.edit-container .box-bd view{line-height: 40rpx; max-height: 80rpx; color: #1A1A1A; font-size: 28rpx;}
.edit-container .box-bd text{color: #9A9A9A; font-size: 26rpx; line-height: 37rpx;}

.edit-container .cont{margin-top:20rpx;}
.edit-container .explain-box{background-color: #fff; padding: 0 32rpx 25rpx 32rpx; margin-bottom: 20rpx;}
.edit-container .exp-hd{height: 88rpx; line-height: 88rpx; color: #1A1A1A; font-size: 30rpx;}
.edit-container .exp-bd{padding:20rpx 0 7rpx;}
.edit-container .exp-bd textarea{width: 100%; height: 250rpx; box-sizing: border-box; padding: 32rpx; background-color: #F5F5F5; border-radius: 6rpx; color: #333; font-size: 28rpx; line-height: 40rpx;}
.edit-container .exp-ft{color: #A7A7A7 ; margin-top:18rpx; font-size: 28rpx; line-height: 40rpx; height: 40rpx; display: flex;align-items:center;}
.edit-container .exp-ft image{width: 26rpx; height: 26rpx; display: inline-block; margin-right: 10rpx;}

.edit-container .ft-box{height: 100rpx;}
.edit-container .ft-box button{position: fixed; left: 0; right: 0; bottom: 0; background-color: #27C886; color: #FFFFFF; font-size: 30rpx; border-radius: 0; height: 100rpx; line-height: 100rpx;}
.edit-container .ft-box button::after{border-color: #27C886;}
.edit-container .ft-box .button-hover{background-color: #27C886;}
