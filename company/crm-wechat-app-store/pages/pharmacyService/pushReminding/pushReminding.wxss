page{
  background: #f5f5f5;
}
.fl{
  float: left
}
.fr{
  float: right;
}
.clear{
  clear: both;
}
.list{
padding-bottom: 20rpx;
}

.nav{
  display: flex;
  justify-content:space-between;
  padding: 23rpx 32rpx;
  background: #fff;
   font-size: 30rpx;
  color: #1A1A1A;
}

.btn-item{
  padding: 20rpx 32rpx 0;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.btn-item-one{
  width: 218rpx;
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 6px;
  text-align: center;
  font-size: 28rpx;
  color: #1A1A1A;
  line-height: 88rpx;
}
.take-medicine{
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.take-medicine view{
  font-size: 30rpx;
  color: #1A1A1A;
  margin-left: 32rpx;
}

.date-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 88rpx;
  width: 100%;
  justify-content: space-between;
  background-color: #fff;
  padding-bottom: 32rpx;
  position: relative;
}
.date-view::before {
  content: " ";
  position: absolute;
  left: 32rpx;
  bottom: 32rpx;
  right: 32rpx;
  height: 1px;
  border-top: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
  z-index: 2;
}

.section {
  display: flex;
  align-items: center;
}

.left-date {
  margin-left: 32rpx;
}

.picker {
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #1A1A1A;
}

.right-day {
  margin-right: 32rpx;
}

.get-time{
  width: 750rpx;
  height: 88rpx;
  background: #fff;
}
.get-time-item{
  width: 686rpx;
  height: 100%;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  border-bottom: 1px solid #E6E6E6;
}

.get-time-left{
  width: 280rpx;
  height: 50rpx;
  margin-top: 17rpx;
}


.get-time-right{
  width: auto;
  height: 50rpx;
   margin-top: 17rpx;
   margin-left: 55rpx;
}
.g-time{
  width: auto;
  height: 100%;
  font-size: 36rpx;
}
.g-text{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #999999;
  margin-left: 10rpx;
}
.get-time-center{
  font-size: 26rpx;
  color: #1A1A1A;
  text-align: center;
}

.remarks {
  background-color: #fff;
  margin-top:20rpx;
}


.remarks text{
  display: block;
  padding: 23rpx 32rpx;
  font-size: 30rpx;
  color: #000000;
  background: #fff;
}
.text-item{
  padding: 23rpx 32rpx; 
  border-radius: 6px;
  background: #fff;
}

.text-item-remarks{width: 100%; height: 190rpx; box-sizing: border-box; padding: 32rpx; background-color: #F5F5F5; border-radius: 6rpx; color: #333; font-size: 28rpx; line-height: 40rpx;}


.grade image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 16rpx;
}
.grade-nunber{
  margin-left: 20rpx;
  color: #1A1A1A;
}

.drug-information-item{
  padding: 25rpx 32rpx;
  background: #fff;
  position: relative;
  font-size: 28rpx;
}

.drug-information-item ::before{
  content: '';
  width: 718rpx;
  height: 2rpx;
  background: #f5f5f5;
  position: absolute;
  left: 32rpx;
  top: 0;
}

.drug-information-item-text{
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
}
.drug-information-item-title{color: #546472; max-height: 80rpx; overflow: hidden;}

.list .info{display: flex; position: relative;padding:23rpx 32rpx; background-color: #fff;}
.list .info .mt-hd{margin-right: 20rpx; width: 100rpx; height: 100rpx;}
.list .info .mt-hd image{width: 100rpx; height: 100rpx;}
.list .info .mt-bd{flex:1; color: #1A1A1A;}
.list .info .info-name{display: flex;align-items:center; line-height: 50rpx;padding-top: 6rpx; font-size: 30rpx;}
.list .info .info-name text{padding-right: 15rpx;}
.list .info .gender-icon{width: 26rpx; height: 26rpx;}
.list .info .member{font-size: 24rpx; line-height: 33rpx;}
.list .info .member-label{vertical-align: middle; padding-left: 8rpx; padding-right: 20rpx; color: #FFB602; }
.list .info .member-phone{vertical-align: middle; }
.list .info .member-icon{width: 26rpx; height: 26rpx; vertical-align: middle;}
.list .info .mt-ft{color: #999999; font-size: 28rpx; line-height: 50rpx; padding-top: 6rpx;}


.ft-box{height: 100rpx;}
.ft-box button{position: fixed; left: 0; right: 0; bottom: 0; background-color: #27C886; color: #FFFFFF; font-size: 30rpx; border-radius: 0; height: 100rpx; line-height: 100rpx; z-index: 30;}
.ft-box button::after{border-color: #27C886;}
.ft-box .button-hover{background-color: #27C886;}

.mode{display: flex;width: 100%;height: 100%;position: absolute;top: 209rpx;background-color: rgba(0, 0, 0, 0.2);}
.on {background: #27C886;border-radius: 6rpx;color: #fff;}
